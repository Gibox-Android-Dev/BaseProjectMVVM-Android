<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.watermark.WatermarkActivity">


    <TextView
        android:id="@+id/txt_text"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:background="#33000000"
        app:layout_constraintRight_toRightOf="@id/img_image"
        app:layout_constraintBottom_toBottomOf="@id/img_image"
        android:text="Muhammad Riza"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="8dp"
        android:textColor="@color/white"/>


    <TextView
        android:id="@+id/txt_text_maps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#33000000"
        app:layout_constraintRight_toRightOf="@id/img_image"
        app:layout_constraintBottom_toBottomOf="@id/img_image"
        app:layout_constraintLeft_toLeftOf="@id/img_image"
        android:text="Muhammad Riza 77733 882772 qwdqwd"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="24sp"
        android:padding="8dp"
        android:textColor="@color/white"/>



    <ImageView
        android:id="@+id/img_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="@color/white"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_open_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:layout_marginTop="16dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/txt_open_camera"
        app:cornerRadius="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_image"
        app:layout_constraintVertical_bias="0.941"
        tools:layout_editor_absoluteX="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>